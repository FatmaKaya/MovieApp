@model IEnumerable<Movie>


@foreach (var movie in Model)
{
    <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
            @*<img src="~/img/@movie.Image" style="width:260px; height:200px" />*@
            <svg class=" card bd-placeholder-img card-img-top" width="100%" height="0px" xmlns="@movie.Image" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail"><title>@movie.Name</title><img src="~/img/@movie.Image" width="100%" height="100%" style="border-radius:10px; padding:5px" />@*<rect width="100%" height="100%" fill="#55595c" /><text x="50%" y="50%" fill="#eceeef" dy=".3em">@movie.Name</text>*@</svg>
            <div class="card-body">
                <p class="card-text">@movie.Name</p>
                <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                        @*<button type="button" class="btn btn-sm btn-outline-secondary">View</button>*@
                        <a asp-controller="Home" asp-action="Details"
                           asp-route-id="@movie.Id" class="btn btn-sm btn-outline-secondary">Details</a>
                    </div>
                    <small class="text-muted">9 mins</small>
                </div>
            </div>
        </div>
    </div>
}